{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "attach", // Changed from "launch" to "attach" for Nodemon
        "name": "Attach to Nodemon",
        "port": 9229, // Default Node.js debug port
        "restart": true, // Auto-reconnect if Nodemon restarts
        "protocol": "inspector",
        "skipFiles": ["<node_internals>/**"],
        "address": "localhost",
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "${workspaceFolder}"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "runtimeExecutable": "nodemon", // Directly use Nodemon
        "program": "${workspaceFolder}/src/api/v1/controllers/admin/productAttributesValues.controller.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  