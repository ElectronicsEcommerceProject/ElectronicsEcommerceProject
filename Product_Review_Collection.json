        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// You can add test scripts here",
          "// For example, to save a review_id from a create response",
          "/*",
          "if (pm.response.code === 201) {",
          "    const responseJson = pm.response.json();",
          "    if (responseJson && responseJson.data && responseJson.data.product_review_id) {",
          "        pm.collectionVariables.set('review_id', responseJson.data.product_review_id);",
          "        console.log('Review ID saved:', responseJson.data.product_review_id);",
          "    }",
          "}",
          "*/"
        ]
      }
    }
  ]
}