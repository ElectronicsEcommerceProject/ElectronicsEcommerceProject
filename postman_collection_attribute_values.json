{
  "info": {
    "name": "Product Attribute Values API",
    "description": "API endpoints for managing product attribute values",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add Attribute Value",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "JWT token for authentication"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"attribute_id\": \"{{attribute_id}}\",\n    \"value\": \"Red\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/admin/attribute-values",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "admin", "attribute-values"]
        },
        "description": "Create a new attribute value"
      }
    },
    {
      "name": "Get All Attribute Values",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "JWT token for authentication"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/admin/attribute-values",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "admin", "attribute-values"]
        },
        "description": "Retrieve all attribute values"
      }
    },
    {
      "name": "Get Attribute Value by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "JWT token for authentication"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/admin/attribute-values/{{attribute_value_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "admin", "attribute-values", "{{attribute_value_id}}"]
        },
        "description": "Retrieve a specific attribute value by ID"
      }
    },
    {
      "name": "Get Attribute Values by Attribute ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "JWT token for authentication"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/admin/attribute-values/attribute/{{attribute_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "admin", "attribute-values", "attribute", "{{attribute_id}}"]
        },
        "description": "Retrieve all values for a specific attribute"
      }
    },
    {
      "name": "Update Attribute Value",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "JWT token for authentication"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"value\": \"Dark Red\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/admin/attribute-values/{{attribute_value_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "admin", "attribute-values", "{{attribute_value_id}}"]
        },
        "description": "Update an existing attribute value"
      }
    },
    {
      "name": "Delete Attribute Value",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "JWT token for authentication"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/admin/attribute-values/{{attribute_value_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "admin", "attribute-values", "{{attribute_value_id}}"]
        },
        "description": "Delete an attribute value"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "description": "Base URL for the API"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here",
      "description": "JWT token for authentication"
    },
    {
      "key": "attribute_id",
      "value": "your_attribute_uuid_here",
      "description": "UUID of an attribute"
    },
    {
      "key": "attribute_value_id",
      "value": "your_attribute_value_uuid_here",
      "description": "UUID of an attribute value"
    }
  ]
}